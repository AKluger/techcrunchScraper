<div class="container">
	<div class="row">
		<div class="col-md-12 text-center" id="top-bar">
			<img
				src="https://cdn2.bigcommerce.com/server100/367cc/products/46401/images/183293/Super_Scraper__13402.1360690411.1280.1280.jpg?c=2"
				alt="Scraper" />
			<h1> Crunchy Tech Scraper! </h1>
		</div>
		{{!-- <div class="col-md-4 text-center"> --}}
			<div class="row articleList">
				{{#each article}}
				{{#unless this.saved}}
				<div class="card col-md-4 text-center" style="width: 18rem;" data-id="this.id">
					<div class="card-body">
						<h5 class="card-title">{{this.title}}.</h5>
						<a href="{{this.link}}" class="btn btn-primary" target="_blank">View article</a>
						<button class="btn btn-danger saveArticle" data-id={{this.id}}>Save Article</button>
						<button class="btn btn-primary viewNotes" data-toggle="modal" data-target="#noteModal"
						data-article={{this.notes}}>View/Add Notes</button>
						<p>{{this.summary}}</p>
					</div>
				</div>
				{{/unless}}
				{{/each}}
					<div class="modal" id="noteModal" tabindex="-1" role="dialog">
				<div class="modal-dialog" role="document">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title">Notes for <span id="articleId"></span></h5>
							<button type="button" class="close" data-dismiss="modal" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
						<div class="modal-body">
							<p></p>
							<form>
							  <div class="form-group">
    <label for="noteContent">Write your note here </label>
    <textarea class="form-control" id="noteContent" rows="2"></textarea>
  </div>
  <button type="submit" class="btn btn-primary addNote">Save Note</button>
  </form>
						</div>
						<div class="modal-footer">
							
							<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
						</div>
					</div>
				</div>
			</div>
			</div>
		{{!-- </div> --}}
	</div>
</div>