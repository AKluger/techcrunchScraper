<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
	<a class="navbar-brand" href="#">Crunchy Tech Scraper</a>
	<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
		aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
		<span class="navbar-toggler-icon"></span>
	</button>
	<div class="collapse navbar-collapse" id="navbarNav">
		<ul class="navbar-nav">
			<li class="nav-item active">
				<a class="nav-link" href="/">Home<span class="sr-only">(current)</span></a>
			</li>
			<li class="nav-item">
				<a class="nav-link" href="/saved">Saved Articles</a>
			</li>
		</ul>
	</div>
	<form class="form-inline">
		<button class="btn green-btn" type="button" id="newScrape">Scrape Articles!</button>
	</form>
</nav>
<div class="container">
	<div class="row">
		<div class="col-md-12 text-center" id="top-bar">
			<img src="./images/scraper.png"
				alt="Scraper" />
			<h1> Crunchy Tech Scraper! </h1>
		</div>
		<div class="row articleList">
			{{#each article}}
			{{#unless this.saved}}
			<div class="card col-md-4 text-center" style="width: 18rem;" data-id={{this.id}}>
				<div class="card-body">
					<h5 class="card-title">{{this.title}}.</h5>
					<a href="{{this.link}}" class="btn view-btn mt-2" target="_blank">View article</a>
					<button class="btn save-btn saveArticle mt-2" data-id={{this.id}}>Save Article</button>
					<button class="btn green-btn viewNotes m-2" data-id={{this.id}} data-toggle="modal"
						data-target="#noteModal" data-notes={{this.note}}>View/Add Notes</button>
					<p>{{this.summary}}</p>
				</div>
				<div class="modal" id="noteModal" tabindex="-1" role="dialog">
					<div class="modal-dialog" role="document">
						<div class="modal-content">
							<div class="modal-header">
								<h5 class="modal-title">Notes for <span id="articleId"></span></h5>
								<button type="button" class="close" data-dismiss="modal" aria-label="Close">
									<span aria-hidden="true">&times;</span>
								</button>
							</div>
							<div class="modal-body">
								<ul class="list-group notes">

								</ul>
								<form>
									<div class="form-group">
										<label for="noteContent">Write your note in the space provided </label>
										<textarea class="form-control" id="noteContent" rows="2"></textarea>
									</div>
									<button type="submit" class="btn view-btn addNote">Save Note</button>
								</form>
							</div>
							<div class="modal-footer">

								<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
							</div>
						</div>
					</div>
				</div>
			</div>
			{{/unless}}
			{{/each}}

		</div>
	</div>
</div>